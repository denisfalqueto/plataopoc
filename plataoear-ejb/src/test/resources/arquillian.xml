<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <container  
            qualifier="wildfly-as-managed"  
            default="true">  
        <configuration>
            <property name="jbossHome">target/wildfly-8.2.0.Final</property>
            <!-- Aguardando a issue https://issues.jboss.org/browse/ARQ-560 para retirar a execução manual do jacoco -->
            <property name="javaVmArguments">-Xmx1024m -XX:MaxPermSize=512m -javaagent:target/jacoco-agent/jacocoagent.jar=destfile=target/jacoco.exec,includes=br.jus.*,dumponexit=true</property>  
        </configuration>  
    </container> 
</arquillian>
